</head>
<body>

<!-- ======= Top Bar ======= -->
<section id="topbar" class="d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">
        <div class="contact-info d-flex align-items-center">
            <i class="fas fa-envelope d-flex align-items-center">
                <a href="mailto:hcavid386@gmail.com">hcavid386@gmail.com</a>
            </i>
            <i class="fas fa-mobile d-flex align-items-center ms-4">
                <span>+994 77 514 26 44</span>
            </i>
        </div>
        <div class="social-links d-none d-md-flex align-items-center">
            <a href="#" class="twitter">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="facebook">
                <i class="fab fa-facebook"></i>
            </a>
            <a href="#" class="instagram">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="youtube">
                <i class="fab fa-youtube"></i>
            </a>
        </div>
    </div>
</section>
<!-- ======= Top Bar ======= -->

<!--Navbar Section Start-->

<nav id="header" class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <a class="header-logo" asp-controller="Home" asp-action="Index">
            <img src="~/assets/images/Navbar-Logo.jpg" alt="">
        </a>

        <div class="nav-section">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link scrollto hover-underline-animation" asp-controller="Home" asp-action="Index">Home </a>
                    </li> 
                    <li class="nav-item  ">
                        <a class="nav-link scrollto hover-underline-animation" asp-controller="Covid" asp-action="Index">Covid 19 Stats </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link scrollto hover-underline-animation" asp-controller="DashBoard" asp-action="Index">DashBoard </a>
                        </li>
                        if (User.IsInRole(UserRoles.Patient.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link scrollto hover-underline-animation" asp-controller="Doctor" asp-action="Index">Register Doctor </a>
                            </li> <li class="nav-item">
                                <a class="nav-link scrollto hover-underline-animation" asp-controller="Doctor" asp-action="RegDoctors">Registered Doctor </a>
                            </li>
                        }
                        else if(User.IsInRole(UserRoles.Doctor.ToString()))
                        {<li class="nav-item">
                             <a class="nav-link scrollto hover-underline-animation" asp-controller="Doctor" asp-action="DocPatients">Patients </a>
                         </li>
                            
                        }
                    }
                    <li class="nav-item">
                        <a class="nav-link scrollto hover-underline-animation" asp-controller="Doctor" asp-action="AllDoc">Doctors</a>
                    </li>


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link scrollto hover-underline-animation" style="color: #007bff" > @User.Identity.Name.ToUpper()</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto hover-underline-animation" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link scrollto hover-underline-animation" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto hover-underline-animation" asp-controller="Account" asp-action="Index">Register</a>
                        </li>
                    }

                </ul>
            </div>


        </div>
    </div>

</nav>

<!--Navbar Section End-->

<!-- ======= Hero Section Start ======= -->

<!-- ======= Hero Section End ======= -->


<main>
    @RenderBody()
</main>
