@using HMS.Core.Enums
@model UserRegisterVM  
<div class="form__container ">
    <div asp-validation-summary="All" class="d-flex justify-content-center"></div>
    <form asp-action="Index" class="form__control ">

        <input asp-for="FirstName" placeholder="Enter your First name">
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <input asp-for="LastName" placeholder="Enter your Last name">
        <span asp-validation-for="LastName" class="text-danger"></span>

        <input asp-for="UserName" placeholder="Enter your Username">
        <span asp-validation-for="UserName" class="text-danger"></span>
        
        @* <input asp-for="Detail" placeholder="Enter your Detail"> *@
        <textarea  asp-for="Detail" cols="90" rows="5" placeholder="Enter your Detail"></textarea>
        <span asp-validation-for="Detail"   class="text-danger"></span>

        <input asp-for="Email" placeholder="Enter your Email adress">
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="PhoneNumber" placeholder="Enter your PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <input asp-for="Password" placeholder="Enter your Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <input asp-for="ConfirmPassword" placeholder="Confirm your Password your password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="BloodGroup">Select Category<span class="text-danger">*</span></label>
            <select class="form-control" asp-for="BloodGroup">
                @foreach (var bloodGroup in Enum.GetNames(typeof(BloodGroup)))
                {
                    <option value="@bloodGroup">@bloodGroup</option>
                }
                <span asp-validation-for="BloodGroup" class="text-danger"></span>


            </select>
        </div><br><br>
        <div class="form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" value="@Gender.Female.ToString()" id="Gender">
            <label class="form-check-label" for="Gender">
                FeMale
            </label>
            <span asp-validation-for="Gender" class="text-danger"></span>

        </div>
        <div class="form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" value="@Gender.Male.ToString()" id="Gender">
            <label class="form-check-label" for="Gender">
                Male
            </label>
        </div>
        <br><br>

        <br><br>
        <div class="form-check">
            <input asp-for="Role" class="form-check-input" type="radio" value="@UserRoles.Doctor.ToString()" id="Role">
            <label class="form-check-label" for="flexRadioDefault1">
                Doctor
            </label>
        </div><br><br>
        <div class="form-check">
            <input asp-for="Role" class="form-check-input" type="radio" value="@UserRoles.Patient.ToString()" id="Role" checked>
            <label class="form-check-label" for="flexRadioDefault2">
                Pasient
            </label>
        </div>
        <div class="direct__login">
            <input asp-for="StayLoggedIn">
            <label for="check">Login directly</label>
        </div>
        <button type="submit">Register Now</button>
    </form>
</div>
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
