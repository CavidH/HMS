@model List<Doctor>
@{
    int num = 1;
}
<div class="content-page container mt-5">
    <div class="content">

        <!-- Start Content-->
        <div class="admin-panel container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <h4 class="m-t-0 header-title mb-4">
                                <b> All Doctors</b>


                            </h4>
                            @if (TempData["Alert"] is not null)
                            {
                                <div class="alert alert-success">
                                    <strong>@TempData["Alert"].ToString()</strong>
                                </div>
                            }
                            @if (TempData["AlertErr"] is not  null)
                            {
                                <div class="alert alert-danger">
                                    <strong>@TempData["AlertErr"].ToString()</strong>
                                </div>
                            }
                            <table id="datatable-buttons" class="table table-striped table-bordered table-hover dt-responsive nowrap mt-4" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                <thead>
                                <tr>
                                    <th>№</th>
                                    <th>FullName</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>BloodGroup</th>
                                    <th>Gender</th>
                                    <th>Detail</th>
                                    <th>Setting</th>

                                </tr>
                                </thead>

                                <tbody>

                                @foreach (var doctor in Model)
                                {
                                    <tr>
                                        <td>@num </td>
                                        <td>@((doctor.AppUser.FirstName + " " + doctor.AppUser.LastName).ToUpper())</td>
                                        <td>@doctor.AppUser.Email</td>
                                        <td>@doctor.AppUser.PhoneNumber</td>
                                        <td>@doctor.AppUser.BloodGroup</td>
                                        <td>@doctor.AppUser.Gender</td>
                                        <td>@doctor.AppUser.Detail</td>

                                        <td>

                                            <a class="btn btn-primary" asp-action="AddDoctor" asp-route-id="@doctor.Id">
                                                +
                                            </a>

                                        </td>

                                    </tr>
                                    num++;
                                }




                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- end container-fluid -->

    </div>


</div>